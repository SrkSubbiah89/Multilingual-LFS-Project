# PostgreSQL
DATABASE_URL=postgresql://lfs_user:lfs_password@localhost:5432/lfs_db
POSTGRES_DB=lfs_db
POSTGRES_USER=lfs_user
POSTGRES_PASSWORD=lfs_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Ollama (local, free — used for all general/conversational tasks)
# Install: https://ollama.com  |  then: ollama pull llama3.1
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Anthropic (Claude 3.5 Sonnet — used only for critical tasks)
ANTHROPIC_API_KEY=

# OpenAI (no longer used by default; kept for optional future use)
# OPENAI_API_KEY=

# SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# JWT
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# App
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
